<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ccc" >

    <LinearLayout
        android:id="@+id/relative"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tagline"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/title"
            android:background="@drawable/btn_blue"
            android:gravity="center"
            android:padding="0dp"
            android:text="Menu"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/measurement"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="#FFF"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/application" />

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:background="#FFF"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:text="Measurement"
                    android:textColor="#449def"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="#fff"
                    android:gravity="top"
                    android:text="Run manual measurement now"
                    android:textColor="#222"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tour"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="#FFF"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/usage" />

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:background="#FFF"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:text="Tour"
                    android:textColor="#449def"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="#fff"
                    android:gravity="top"
                    android:text="Understand what the study is about"
                    android:textColor="#222"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/aboutus"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="#FFF"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/sim" />

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:background="#FFF"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:text="About Us"
                    android:textColor="#449def"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:background="#fff"
                    android:gravity="top"
                    android:text="Read about the team"
                    android:textColor="#222"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
         <LinearLayout
            android:id="@+id/settings"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/row_back"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:src="@drawable/network" />

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
               
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    
                    android:gravity="center_vertical"
                    android:text="Settings"
                    android:textColor="#449def"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    
                    android:gravity="top"
                    android:text="Configuration details"
                    android:textColor="#222"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>